          "editorMode": "code",
          "exemplar": false,
          "expr": "avg by (host) (up{job=\"integrations/unix\"})\nor\n(avg by (host) (up{job=\"homeassistant\"} * on() group_left(host) label_replace(up{job=\"homeassistant\"}, \"host\", \"ha\", \"\", \"\")))\nor\n(avg by (host) (pve_up{name=\"synology\"} * on() group_left(host) label_replace(pve_up{name=\"synology\"}, \"host\", \"synology\", \"\", \"\")))",
          "format": "table",
          "instant": true,
          "legendFormat": "__auto",
          "range": false,
          "refId": "Status"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "(100 - (avg by (host) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100))\nor\n(avg by (host) (homeassistant_sensor_state{entity=\"sensor.system_monitor_processor_use\"} * on() group_left(host) label_replace(up{job=\"homeassistant\"}, \"host\", \"ha\", \"\", \"\")))\nor\n(avg by (host) (pve_cpu_usage_ratio{name=\"synology\"} * 100 * on() group_left(host) label_replace(pve_up{name=\"synology\"}, \"host\", \"synology\", \"\", \"\")))",
          "format": "table",
          "instant": true,
          "legendFormat": "__auto",
          "range": false,
          "refId": "CPU"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "((1 - (avg by (host) (node_memory_MemAvailable_bytes) / avg by (host) (node_memory_MemTotal_bytes))) * 100)\nor\n(avg by (host) (homeassistant_sensor_unit_percent{entity=\"sensor.system_monitor_memory_use\"} * on() group_left(host) label_replace(up{job=\"homeassistant\"}, \"host\", \"ha\", \"\", \"\")))\nor\n(avg by (host) ((pve_memory_usage_bytes{name=\"synology\"} / pve_memory_size_bytes{name=\"synology\"} * 100) * on() group_left(host) label_replace(pve_up{name=\"synology\"}, \"host\", \"synology\", \"\", \"\")))",
          "format": "table",
          "instant": true,
          "legendFormat": "__auto",
          "range": false,
          "refId": "Memory"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "((1 - (avg by (host) (node_filesystem_avail_bytes{mountpoint=\"/host/root\",fstype=\"ext4\"}) / avg by (host) (node_filesystem_size_bytes{mountpoint=\"/host/root\",fstype=\"ext4\"}))) * 100)\nor\n(avg by (host) (homeassistant_sensor_unit_percent{entity=\"sensor.system_monitor_disk_usage\"} * on() group_left(host) label_replace(up{job=\"homeassistant\"}, \"host\", \"ha\", \"\", \"\")))\nor\n(avg by (host) ((1 - homeassistant_sensor_data_size_mb{entity=\"sensor.synology_volume_1_volume_used\"} / homeassistant_sensor_data_size_mb{entity=\"sensor.synology_volume_1_total_size\"}) * 100 * on() group_left(host) label_replace(pve_up{name=\"synology\"}, \"host\", \"synology\", \"\", \"\")))",
          "format": "table",
          "instant": true,
          "legendFormat": "__auto",
          "range": false,
          "refId": "Disk"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "editorMode": "code",
          "exemplar": false,
          "expr": "avg by (host) (node_load1)\nor\n(avg by (host) (homeassistant_sensor_state{entity=\"sensor.system_monitor_load_1_min\"} * on() group_left(host) label_replace(up{job=\"homeassistant\"}, \"host\", \"ha\", \"\", \"\")))",
          "format": "table",
          "instant": true,
          "legendFormat": "__auto",
          "range": false,
          "refId": "Load1"
        },
        {
          "datasource": {
