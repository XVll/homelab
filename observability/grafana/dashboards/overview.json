          "editorMode": "code",
          "exemplar": false,
          "expr": "avg by (host) (node_load15)\nor\n(avg by (host) (homeassistant_sensor_state{entity=\"sensor.system_monitor_load_15_min\"} * on() group_left(host) label_replace(up{job=\"homeassistant\"}, \"host\", \"ha\", \"\", \"\")))",
          "format": "table",
