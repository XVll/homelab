// ============================================================================
// METRICS: Prometheus Remote Write
// ============================================================================

prometheus.remote_write "prometheus" {
  endpoint {
    url = "http://prometheus:9090/api/v1/write"

    // Optional: Add metadata
    headers = {
      "X-Source" = "alloy",
    }
  }

  // External labels added to all metrics
